<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <title>Job Positions - [Event Name]</title>
</head>
<body>
    <div class="header">
        <a href="/" style="text-decoration: none; color: #ffffff !important;">
            <h1>Event Management Software</h1>
        </a>
        <!--div class="search-box" style="max-width: 50%;">
            <input type="search" id="search" placeholder="Search">
        </div-->
    </div>

    <div class="body-content">
        <h2 style="text-align: center;">Job Positions for <%= event.event_name %></h2>

        <a href="/" class="secondary-button" style="max-width:max-content; align-self: flex-end;">Back to Home</a>

        <!-- Jobs Table -->
        <table class="events-table">
            <tr>
                <th>Job Title</th>
                <th>Job Description</th>
                <th>Assigned Staff Member</th>
                <th>Actions</th>
            </tr>
            <!-- Use ejs templating to create rows in a table for each job as well as buttons for each of them -->
            <% job_positions.forEach(job => { %>
                <tr>
                    <td><%= job.job_title %></td>
                    <td><%= job.job_description %></td>
                    <td><%= job.assigned_staff_member %></td>
                    <td>
                        <!-- Add a button that triggers the confirmation modal -->
                        <form id="deleteJobForm-<%= job._id %>" action="/delete_job/<%= event._id %>/<%= job._id %>" method="POST" style="display:inline;">
                            <button type="button" class="secondary-button" onclick="confirmDeleteJob('<%= job._id %>')">Delete Job</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            <form action="/create_job/<%= event._id%>" method="POST">
                <tr>
                    <td>
                        <textarea id="job_title" name="job_title" placeholder="New Job Title" style="width: 90%" required></textarea>
                    </td>
                    <td>
                        <textarea id="job_description" name="job_description" placeholder="New Job Description" style="width: 90%" required></textarea>
                    </td>
                    <td>
                        <textarea id="assigned_staff_member" name="assigned_staff_member" placeholder="New Job Assigned Staff Member" style="width: 90%" required></textarea>
                    </td>
                    <td>
                        <button type="submit">Create New Job</button>
                    </td>
                </tr>
            </form>
        </table>
        

    </div>



    <!-- Footer -->
    <div class="footer">
        <div style="display: flex; flex-grow: 1;">
            <!-- Add your footer content -->
        </div>
    </div>


    <!-- Delete Confirmation Modal for Job -->
<div id="deleteJobModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Are you sure you want to delete this job?</h2>
      <button id="confirmDeleteJobButton" class="btn btn-danger">Delete</button>
      <button id="cancelDeleteJobButton" class="btn btn-secondary">Cancel</button>
    </div>
  </div>
  
  <script>
      var deleteJobModal = document.getElementById("deleteJobModal");
      var confirmDeleteJobButton = document.getElementById("confirmDeleteJobButton");
      var cancelDeleteJobButton = document.getElementById("cancelDeleteJobButton");
      var closeDeleteJobModal = document.getElementsByClassName("close")[0];
      var jobFormToDelete = null;
  
      function confirmDeleteJob(jobId) {
          jobFormToDelete = document.getElementById(`deleteJobForm-${jobId}`);
          deleteJobModal.style.display = "block";
      }
  
      cancelDeleteJobButton.onclick = closeDeleteJobModal.onclick = function() {
          deleteJobModal.style.display = "none";
          jobFormToDelete = null;
      }
  
      confirmDeleteJobButton.onclick = function() {
          if (jobFormToDelete) {
              jobFormToDelete.submit();
          }
      }
  
      window.onclick = function(event) {
          if (event.target == deleteJobModal) {
              deleteJobModal.style.display = "none";
              jobFormToDelete = null;
          }
      }
  </script>
  

</body>
</html>
